<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.testtakephoto2.MainActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgrp01"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radbtnThumb"
            android:text="Tomar Foto"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radbtnGall"
            android:text="Galeria"/>

    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgrp01"
        android:onClick="methodChoose"
        android:text="Obtener"
        android:id="@+id/btnPic"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_below="@+id/btnPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgView"/>

</RelativeLayout>
